<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Map page Title</title>

    <!--App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/vendor/js.cookie.js"></script>
    <script type="text/javascript" src="/scripts/map.js"></script>

    <!-- font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- App Stylesheets -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/map-page.css" type="text/css" />
  </head>

  <body>
    <header id="map-page-header">
      <h1 id="username">User McUser</h1>
    </header>
    <main>
      <div id="menu">
        <a href="/"><button id="back-to-maps">Back to all maps</button></a>
        <div id="map-info">
          <h2 id="map-title"></h2>
          <p id="map-description"></p>
          <div class="btn-group">
            <button id="new-pin">Add Pin</button>
            <button id="edit-map">Edit Map</button>
            <!-- <a href="/"><button>View Maps</button></a> -->

          </div>
        </div>
        <section id="location-list"></section>
      </div>
      <div id="map"></div>
      <!-- External JS to GoogleMaps API -->
      <script
        src="https://maps.googleapis.com/maps/api/js?key=<%= apiKey %>&libraries=&v=weekly"
        async
      ></script>
    </main>
  </body>
</html>
